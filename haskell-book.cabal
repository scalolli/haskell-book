category:            Web
build-type:          Simple
cabal-version:       >=1.10
extra-source-files:  README.md

executable haskell-testing
  hs-source-dirs:      src
  main-is:             Main.hs
  default-language:    Haskell2010
  build-depends:       base >= 4.7 && < 5
                       , hspec
                       , QuickCheck
                       , checkers
                       , generic-arbitrary

library
  hs-source-dirs:
      src
  build-depends:
      base >=4.7 && <5
      , QuickCheck
  exposed-modules:
--        Chapter8.WordNumber
--      , Chapter14.QuickCheckExercises
--      , Chapter15.Intermissions
--      , Chapter15.Exercises
