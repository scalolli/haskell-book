          Chapter16.Exercises,
          Chapter17.Intermission

  default-language: Haskell2010


test-suite tests
  type: exitcode-stdio-1.0
  main-is: Spec.hs
  hs-source-dirs:
      test
  ghc-options: -threaded -rtsopts -with-rtsopts=-N
  build-depends:
      base >=4.7 && <5
    , haskell-book
    , containers
    , QuickCheck
    , hspec
    , checkers

  default-language: Haskell2010

